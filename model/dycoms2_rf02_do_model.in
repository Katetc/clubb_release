! Parameter file for DYCOMS2 RF02 Sc case with drizzle
! and no cloud water sedimentation.

&model_setting

runtype = "dycoms2_rf02_do"

nzmax  = 147
deltaz = 10.0

day = 11, month = 7, year = 2001, 
rlat = 31.5, rlon = -122.0

time_initial = 0.0
time_final =  21600.0
time_spinup = 30000.0

dtmain    = 60.0
dtclosure = 60.0

Tsfc = 292.0
psfc = 1017.8e2

fcor = 7.6e-5

cloud_sed     = .false.
kk_rain       = .true.
lcoamps_micro = .false.
licedfs       = .false.
lbugsrad      = .false.
bottom_at_sfc = .true.

/

&sounding

